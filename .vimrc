execute pathogen#infect()

syntax on
filetype on
filetype plugin on
filetype indent on

set autoindent
set background=dark
set backupdir=/tmp
set dir=/tmp
set expandtab
set shiftwidth=4
set smartindent
set swapfile
set tabstop=4

let g:php_cs_fixer_enable_default_mapping = 1
let g:vim_markdown_folding_disabled=1
